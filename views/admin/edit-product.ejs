                                <script>
                                    document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('.form-edit-product');
    const nameInput = document.getElementById('name');
    const fragranceTypeSelect = document.getElementById('fragranceType');
    const genderSelect = document.getElementById('gender');
    const occasionsSelect = document.getElementById('occasions');
    const descriptionTextarea = document.getElementById('description');
    const imageInputs = document.querySelectorAll('input[type="file"][name="images"]');
    
    const createErrorElement = (id, message) => {
        let errorElement = document.getElementById(id);
        if (!errorElement) {
            errorElement = document.createElement('div');
            errorElement.id = id;
            errorElement.className = 'error-message';
            errorElement.style.color = 'red';
        }
        errorElement.textContent = message;
        return errorElement;
    };

    const insertErrorAfter = (input, errorElement) => {
        const existingError = input.parentNode.querySelector('.error-message');
        if (existingError) existingError.remove();
        input.parentNode.appendChild(errorElement);
    };

    const validateName = () => {
        const name = nameInput.value.trim();
        if (!name || name.length > 20 || /[^a-zA-Z0-9\s-]/.test(name)) {
            const error = createErrorElement('nameError', 'Product name is required, max 20 characters, and not contain special characters (except -).');
            insertErrorAfter(nameInput, error);
            return false;
        }
        return true;
    };

    const validateFragranceType = () => {
        if (!fragranceTypeSelect.value.trim()) {
            const error = createErrorElement('fragranceTypeError', 'Please select a fragrance type.');
            insertErrorAfter(fragranceTypeSelect, error);
            return false;
        }
        return true;
    };

    const validateGender = () => {
        if (!genderSelect.value.trim()) {
            const error = createErrorElement('genderError', 'Please select a gender.');
            insertErrorAfter(genderSelect, error);
            return false;
        }
        return true;
    };

    const validateOccasions = () => {
        if (!occasionsSelect.value.trim()) {
            const error = createErrorElement('occasionsError', 'Please select an occasion.');
            insertErrorAfter(occasionsSelect, error);
            return false;
        }
        return true;
    };

    const validateDescription = () => {
        const description = descriptionTextarea.value.trim();
        if (!description || description.length > 1000) {
            const error = createErrorElement('descriptionError', 'Description is required and must be under 1000 characters.');
            insertErrorAfter(descriptionTextarea, error);
            return false;
        }
        return true;
    };

  

    form.addEventListener('submit', function (e) {
        const isValid = [
            validateName(),
            validateFragranceType(),
            validateGender(),
            validateOccasions(),
            validateDescription(),
        ].every(validation => validation);

        if (!isValid) {
            e.preventDefault(); 
        }
    });
});

                                </script>
