                                      <fieldset class="name">
                                        <label for="variantId" class="body-title">Variant ID</label>
                                        <input class="flex-grow" type="text" name="id" value="<%= id %>" readonly required>
                                      </fieldset>
                                      
                                      <fieldset class="name">
                                        <label for="productId" class="body-title">Product ID</label>
