                                      </fieldset>
                                  
                                      <fieldset class="name">
                                        <label for="milliliter" class="body-title">Milliliter</label>
                                        <select name="milliliter" id="milliliter">
                                          <option value="<%= milliliter %>" selected><%= milliliter %></option>
                                          <% milliliters.forEach(item => { %>
                                            <% if (item.milliliter !== milliliter) { %>
                                              <option value="<%= item.milliliter %>"><%= item.milliliter %></option>
                                            <% } %>
                                          <% }); %>
                                        </select>
                                        <p id="millilitersError" class="error-message"></p>
                                      </fieldset>
                                  
                                      <fieldset class="name">
                                        <label for="price" class="body-title">Price</label>
                                        <input class="flex-grow" type="text" value="<%= price %>" name="price" id="price">
                                        <p id="priceError" class="error-message"></p>
                                      </fieldset>
                                  
                                      <fieldset class="name">
                                        <label for="stock" class="body-title">Stock</label>
                                        <input class="flex-grow" type="number" value="<%= stock %>" name="stock" id="stock">
                                        <p id="stockError" class="error-message"></p>
                                      </fieldset>
                                  
                                      <div class="bot">
                                        <div></div>
                                        <button class="tf-button w208" type="submit">Save</button>
                                      </div>
                                    </form>
                                  
                                    <script>
                                      function validateForm() {
                                        let isValid = true;
                                  
                                        document.querySelectorAll('.error-message').forEach(msg => msg.textContent = '');
                                  
                                        const milliliters = document.getElementById('milliliter');
                                        const millilitersError = document.getElementById('millilitersError');
                                        if (!milliliters.value) {
                                          millilitersError.textContent = "Please select a milliliter option.";
                                          isValid = false;
                                        }
                                  
                                        const price = document.getElementById('price');
                                        const priceError = document.getElementById('priceError');
                                        if (price.value.trim() === "") {
                                          priceError.textContent = "Price cannot be empty.";
                                          isValid = false;
                                        } else if (isNaN(price.value) || Number(price.value) <= 0) {
                                          priceError.textContent = "Please enter a valid price.";
                                          isValid = false;
                                        }
                                  
                                        const stock = document.getElementById('stock');
                                        const stockError = document.getElementById('stockError');
                                        if (stock.value.trim() === "") {
                                          stockError.textContent = "Stock cannot be empty.";
                                          isValid = false;
                                        } else if (isNaN(stock.value) || Number(stock.value) < 0) {
                                          stockError.textContent = "Please enter a valid stock.";
                                          isValid = false;
                                        }
                                  
                                        return isValid;
                                      }
                                    </script>
                                  
