    <script>

        $(document).ready(function () {
            $('#addAddressBtn').on('click', function () {
                const addressType = $('#addressType').val();
                const name = $('#name').val();
                const streetAddress = $('#streetAddress').val();
                const city = $('#city').val();
                const landmark = $('#landmark').val();
                const state = $('#state').val();
                const pincode = $('#pincode').val();
                const phone = $('#phone').val();

                $('.text-danger').hide();

                let isValid = true;

                if (!addressType) {
                    $('#addressTypeError').show();
                    isValid = false;
                }

                if (!name) {
                    $('#nameError').show();
                    isValid = false;
                }

                if (!streetAddress) {
                    $('#streetAddressError').show();
                    isValid = false;
                }

                if (!city) {
                    $('#cityError').show();
                    isValid = false;
                }

                if (!landmark) {
                    $('#landmarkError').show();
                    isValid = false;
                }

                if (!state) {
                    $('#stateError').show();
                    isValid = false;
                }

                if (!pincode) {
                    $('#pincodeError').show();
                    isValid = false;
                } else if (!/^\d{6}$/.test(pincode)) {
                    $('#pincodeError').text('Pincode must be exactly 6 digits').show();
                    isValid = false;
                }

                if (!phone) {
                    $('#phoneError').show();
                    isValid = false;
                }

                if (isValid) {
                    fetch('/user-address-add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            addressType,
                            name,
                            streetAddress,
                            city,
                            landmark,
                            state,
                            pincode,
                            phone
                        })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Success',
                                    text: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: data.message || 'Failed to add address',
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Error adding address');
                        });
                }
            });

            $('.deleteAddressBtn').on('click', function () {
                const addressId = $(this).data('id');

                if (!addressId) {
                    Swal.fire('Error', 'No address ID found', 'error');
                    return;
                }

                Swal.fire({
                    title: 'Are you sure?',
                    text: 'Do you really want to delete this address? This action cannot be undone.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/user-address/${addressId}`, {
                            method: 'DELETE'
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    $(`#address-${addressId}`).remove();
                                    Swal.fire(
                                        'Deleted!',
                                        'Address has been deleted successfully.',
                                        'success'
                                    ).then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire(
                                        'Failed!',
                                        'Failed to delete address: ' + data.message,
                                        'error'
                                    );
                                }
                            })
                            .catch(error => {
                                console.error('Error deleting address:', error);
                                Swal.fire('Error', 'Error deleting address.', 'error');
                            });
                    } else if (result.dismiss === Swal.DismissReason.cancel) {
                        Swal.fire('Cancelled', 'Your address is safe.', 'info');
                    }
                });
            });






            document.querySelectorAll('.editAddressButton').forEach(button => {
                button.addEventListener('click', function () {
                    const addressId = button.getAttribute('data-addressid');
                    const addressType = button.getAttribute('data-addressType');
                    const name = button.getAttribute('data-name');
                    const streetAddress = button.getAttribute('data-streetAddress');
                    const city = button.getAttribute('data-city');
                    const landmark = button.getAttribute('data-landmark');
                    const state = button.getAttribute('data-state');
                    const pincode = button.getAttribute('data-pincode');
                    const phone = button.getAttribute('data-phone');

                    document.getElementById('editAddressId').value = addressId;
                    document.getElementById('editAddressType').value = addressType;
                    document.getElementById('EditName').value = name;
                    document.getElementById('editStreetAddress').value = streetAddress;
                    document.getElementById('editCity').value = city;
                    document.getElementById('editLandmark').value = landmark;
                    document.getElementById('editState').value = state;
                    document.getElementById('editPincode').value = pincode;
                    document.getElementById('editPhone').value = phone;
                });
            });



            $('#editSaveBtn').on('click', function () {
                const addressId = $('#editAddressId').val();
                const addressType = $('#editAddressType').val();
                const name = $('#EditName').val();
                const streetAddress = $('#editStreetAddress').val();
                const city = $('#editCity').val();
                const landmark = $('#editLandmark').val();
                const state = $('#editState').val();
                const pincode = $('#editPincode').val();
                const phone = $('#editPhone').val();

                if (!addressId) {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Address ID is missing. Cannot update the address.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    return;
                }


                $('.text-danger').hide();
                let isValid = true;

                if (!addressType) $('#addressTypeErrorr').show(), isValid = false;
                if (!name) $('#nameErrorr').show(), isValid = false;
                if (!streetAddress) $('#streetAddressErrorr').show(), isValid = false;
                if (!city) $('#cityErrorr').show(), isValid = false;
                if (!landmark) $('#landmarkErrorr').show(), isValid = false;
                if (!state) $('#stateErrorr').show(), isValid = false;
                if (!pincode) {
                    $('#pincodeErrorr').show();
                    isValid = false;
                } else if (!/^\d{6}$/.test(pincode)) {
                    $('#pincodeErrorr').text('Pincode must be exactly 6 digits').show();
                    isValid = false;
                }

                if (!phone) {
                    $('#phoneErrorr').show();
                    isValid = false;
                } else if (!/^\d{10}$/.test(phone)) {
                    $('#phoneErrorr').text('phone no. must be exactly 10 digits').show();
                    isValid = false;
                }
                if (!isValid) return;

                const data = {
                    addressId, addressType, name, streetAddress, city, landmark, state, pincode, phone
                };




                $.ajax({
                    url: '/user-address-edit',
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: 'Address updated successfully',
                                timer: 2000
                            }).then(() => {
                                $('#editAddressModal').modal('hide');
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message || 'Failed to update address',
                            });
                        }
                    },
                    error: function (jqXHR) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while updating the address',
                        });
                    }
                });
            });
        })



