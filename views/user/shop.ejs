<script>
  document.querySelectorAll('.clear-filter').forEach(btn => {
  btn.addEventListener('click', (e) => {
    e.preventDefault();

    const filterType = btn.dataset.clear;

    document
      .querySelectorAll(`.filter-link[data-filter="${filterType}"]`)
      .forEach(link => link.classList.remove('active'));

    applyFilters();
  });
});
  // ── Search overlay
  const overlay = document.getElementById('searchOverlay');
  document.getElementById('searchOpenBtn').addEventListener('click', () => overlay.classList.add('open'));
  document.getElementById('searchCloseBtn').addEventListener('click', () => overlay.classList.remove('open'));
  overlay.addEventListener('click', (e) => { if (e.target === overlay) overlay.classList.remove('open'); });

  // ── Filter links — apply URL query params
  function applyFilters() {
    const query = new URLSearchParams(window.location.search);

    const activeGender = document.querySelector('.filter-link[data-filter="gender"].active');
    if (activeGender) query.set('gender', activeGender.dataset.value);
    else query.delete('gender');

    const activeFragrances = [...document.querySelectorAll('.filter-link[data-filter="fragrance"].active')]
      .map(el => el.dataset.value);
    if (activeFragrances.length) query.set('fragrance', activeFragrances.join(','));
    else query.delete('fragrance');

    const activeOccasion = document.querySelector('.filter-link[data-filter="occasion"].active');
    if (activeOccasion) query.set('occasion', activeOccasion.dataset.value);
    else query.delete('occasion');

    query.delete('page');
    window.location.search = query.toString();
  }

  document.querySelectorAll('.filter-link[data-filter="gender"]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      document.querySelectorAll('.filter-link[data-filter="gender"]').forEach(l => l.classList.remove('active'));
      link.classList.toggle('active');
      applyFilters();
    });
  });

  document.querySelectorAll('.filter-link[data-filter="fragrance"]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      link.classList.toggle('active');
      applyFilters();
    });
  });

  document.querySelectorAll('.filter-link[data-filter="occasion"]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      document.querySelectorAll('.filter-link[data-filter="occasion"]').forEach(l => l.classList.remove('active'));
      link.classList.toggle('active');
      applyFilters();
    });
  });

  // ── Wishlist toggle
  function toggleWishlist(event, variantId) {
    event.preventDefault();
    const heartIcon = document.getElementById(`heart-icon-${variantId}`);
    const isInWishlist = heartIcon.classList.contains('fa-heart');
    const url = isInWishlist ? '/wishlist-remove' : '/wishlist-add';
    const successMessage = isInWishlist ? 'Removed from Wishlist!' : 'Added to Wishlist!';

    fetch(url, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ variantId }),
    })
    .then(r => r.json())
    .then(data => {
      if (data.success) {
        if (isInWishlist) {
          heartIcon.classList.replace('fa-heart', 'fa-heart-o');
          heartIcon.style.color = '';
        } else {
          heartIcon.classList.replace('fa-heart-o', 'fa-heart');
          heartIcon.style.color = 'rgb(246,39,39)';
        }
        Swal.fire({ position:'top', icon:'success', title: successMessage, showConfirmButton:false, timer:1500, width:'250px' });
      } else {
        Swal.fire({ icon:'info', title:'Action Failed!', text: data.message, confirmButtonText:'OK', width:'350px' });
      }
    })
    .catch(() => {
      Swal.fire({ icon:'error', title:'Error!', text:'An error occurred.', confirmButtonText:'OK', width:'250px' });
    });
  }
</script>
