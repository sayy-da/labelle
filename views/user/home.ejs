<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Labelle</title>

    <!-- Favicon  -->
    <link rel="icon" href="img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="css/core-style.css">
    <link rel="stylesheet" href="style.css">
    <style>
        .single-products-catagory {
    position: relative; /* Make the container relative to position the children absolutely */
}

.single-products-catagory img {
    display: block;
    width: 100%;
    height: auto;
}

.single-products-catagory .hover-content {
    position: absolute;
    top: 0; /* Align it at the top of the container */
    left: 0;
    right: 0;
    color: white;
    padding: 10px;
    z-index: 1; /* Make sure the hover content is above the image */
}

.single-products-catagory .hover-content p,
.single-products-catagory .hover-content h4 {
    margin: 0;
    position: relative;
    z-index: 99999; /* Ensure the text is above the image */
}

.single-products-catagory .hover-content p {
    font-size: 16px;
    color: #6d6d6d;
    line-height: 1;
    margin-bottom: 5px;
    transition-duration: 250ms;
    display: block;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    unicode-bidi: isolate;
    cursor: pointer;
}

.single-products-catagory .hover-content h4 {
    color: #242424;
    line-height: 1.3;
    font-weight: 400;
}
.single-products-catagory .hover-content .line {
    width: 80px;
    height: 3px;
    background-color: #fbb710;
    display: block;
    margin-bottom: 15px;
}
.description h2 {
  font-family: 'Poppins', sans-serif;
  font-size: 28px;
}

.description p {
  font-size: 16px;
  color: #555;
  line-height: 1.6;
}

    </style>

</head>

<body>
   

    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            
            <div class="amado-navbar-brand">
                <a href="/"><img src="img/core-img/logo.png" alt="hhhhhhhhh"></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
           
            <div class="logo" style="margin: 0;">
                <a href="/"><img style="width: 300px !important; height: 150px;" src="img/core-img/logo.png" alt=""></a>
            </div> 
            <!-- Amado Nav -->
            <nav class="amado-nav">
                <ul>
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/shop">Shop</a></li>
                   
                    <li><a href="/cart">Cart</a></li>
                  
                </ul>
                <div class="cart-fav-search mb-10">
                    
                    <a href="/wishlist" class="fav-nav"> Favourite</a>
                   
                </div>
            </nav>
            <!-- Button Group -->
           <div class="amado-btn-group mt-30 mb-100">
    <% if (typeof user !== 'undefined' && user) { %>
        <!-- If user is logged in, show Profile button -->
        <button class="btn amado-btn mb-15" onclick="window.location.href='/user-profile'">Profile</button>
    <% } else { %>
        <!-- If not logged in, show Login button -->
        <button class="btn amado-btn mb-15" onclick="window.location.href='/login'">Login</button>
    <% } %>
</div>

            <!-- Cart Menu -->
            <!-- Social Button -->
            
        </header>
        <!-- Header Area End -->

        <!-- Inside your existing layout -->
<div class="products-catagories-area clearfix">
  <div class="container-fluid">

    <!-- Banner Section -->
    <div class="banner mb-5" style="
margin-top: 20px;
border-radius:17px;
      width: 97%;
      height: 400px;
      background: url('https://t3.ftcdn.net/jpg/01/04/33/56/360_F_104335657_sSIJ3Orwy3Gtn1cumaCz9L4WpJHUodeX.jpg') center/cover no-repeat;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2.5rem;
      font-weight: 600;
      text-shadow: 1px 1px 5px rgba(0,0,0,0.4);
    ">
      Discover Your Signature Scent
    </div>

    <!-- Description Section -->
    <section class="description text-center px-4 mb-5">
      <h2 style="font-weight: 600; margin-bottom: 20px;">Welcome to Labelle</h2>
      <p style="max-width: 700px; margin: auto;">
        At Labelle, we believe that fragrance is a powerful expression of personality.
        Our premium selection of perfumes is crafted to bring out the best in you—elegance, confidence, and beauty.
        Whether you're shopping for a special occasion or daily wear, our collection has something enchanting for everyone.
      </p>
    </section>

  <div class="row px-4 g-4">
  <% products.slice(0, 3).forEach((product) => { %>
    <div class="col-12 col-sm-6 col-md-4">
      <div class="card h-100 shadow-sm" style="border-radius: 15px; overflow: hidden; transition: transform 0.2s ease;">
        <a href="/product-details/<%= product.defaultVariant ? product.defaultVariant._id : '' %>" class="text-decoration-none position-relative">
          <img 
            src="<%= product.defaultVariant ? product.images[0] : '' %>" 
            class="card-img w-100" 
            alt="<%= product.name %>" 
            style="height: 280px; object-fit: cover;"
          >
          <!-- Price overlay at bottom of image -->
          <div class="position-absolute bottom-0 start-0 w-100 p-3" style="background: linear-gradient(transparent, rgba(0,0,0,0.7)); color: white;">
            <p class="mb-0 text-white fw-bold" style="font-size: 1.2rem;">₹ <%= product.defaultVariant ? product.defaultVariant.price : '' %></p>
          </div>
        </a>
      </div>
    </div>
  <% }); %>
</div>

<style>
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
  }
</style>

<style>
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
  }
  
  .card:hover .position-absolute {
    opacity: 1;
  }
  
  .card-title {
    transition: color 0.2s ease;
  }
  
  .card:hover .card-title {
    color: #007bff !important;
  }
</style>
  </div>
</div>

    


