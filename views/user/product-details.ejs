  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // ── Thumbnail switcher
    document.querySelectorAll('.thumb-item').forEach(thumb => {
      thumb.addEventListener('click', () => {
        document.querySelectorAll('.thumb-item').forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
        document.getElementById('mainImage').src = thumb.dataset.src;
      });
    });

    // ── Image zoom on hover (desktop only)
    const mainBox = document.getElementById('galleryMain');
    const mainImg = document.getElementById('mainImage');

    if (window.innerWidth > 767) {
      mainBox.addEventListener('mousemove', (e) => {
        const rect = mainBox.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        mainImg.style.transformOrigin = `${x}% ${y}%`;
        mainImg.style.transform = 'scale(1.5)';
      });
      mainBox.addEventListener('mouseleave', () => {
        mainImg.style.transform = 'scale(1)';
        mainImg.style.transformOrigin = 'center';
      });
    }

    // ── Add to cart
    const cartBtn = document.getElementById('add-to-cart');
    if (cartBtn) {
      cartBtn.addEventListener('click', async () => {
        const variantId = document.getElementById('variant-id-input').value;
        try {
          const res = await fetch('/cart-add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ variantId, quantity: 1 }),
          });
          const data = await res.json();
          if (data.success) {
            Swal.fire({
              title: 'Added to Cart!',
              text: 'Item has been added to your cart.',
              icon: 'success',
              confirmButtonText: 'Go to Cart',
              confirmButtonColor: '#1a1410',
            }).then(() => { window.location.href = '/cart'; });
          } else {
            Swal.fire({ title: 'Error!', text: data.message, icon: 'error', confirmButtonText: 'OK' });
          }
        } catch {
          Swal.fire({ title: 'Error!', text: 'Could not add to cart. Try again.', icon: 'error' });
        }
      });
    }

    // ── Wishlist toggle
    function toggleWishlist(event, variantId) {
      event.preventDefault();
      const icon = document.getElementById(`wishlist-button-${variantId}`);
      const label = document.getElementById(`wishlist-label-${variantId}`);
      const wrapper = document.getElementById('wishlist-btn-wrapper');
      const isIn = icon.classList.contains('fa-heart');
      const url = isIn ? '/wishlist-remove' : '/wishlist-add';

      fetch(url, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ variantId }),
      })
        .then(r => r.json())
        .then(data => {
          if (data.success) {
            if (isIn) {
              icon.classList.replace('fa-heart', 'fa-heart-o');
              label.textContent = 'Add to Wishlist';
              wrapper.classList.remove('in-wishlist');
            } else {
              icon.classList.replace('fa-heart-o', 'fa-heart');
              label.textContent = 'Remove from Wishlist';
              wrapper.classList.add('in-wishlist');
            }
            Swal.fire({
              position: 'top', icon: 'success',
              title: isIn ? 'Removed from Wishlist!' : 'Added to Wishlist!',
              showConfirmButton: false, timer: 1500, width: '260px'
            });
          } else {
            Swal.fire({ icon: 'info', title: 'Action Failed!', text: data.message, confirmButtonText: 'OK', width: '350px' });
          }
        })
        .catch(() => {
          Swal.fire({ icon: 'error', title: 'Error!', text: 'Something went wrong.', confirmButtonText: 'OK' });
        });
    }
  </script>
