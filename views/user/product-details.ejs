<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Labelle</title>
  <link rel="icon" href="/img/core-img/favicon.ico">
  <link
    href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,300;1,400&family=Jost:wght@300;400;500&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    *,
    *::before,
    *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --cream: #f9f4ee;
      --warm-white: #fdf9f5;
      --gold: #c9a96e;
      --gold-light: #e8d5b0;
      --dark: #1a1410;
      --muted: #8a7968;
      --border: rgba(201, 169, 110, 0.25);
    }

    html { scroll-behavior: smooth; }

    body {
      font-family: 'Jost', sans-serif;
      background: var(--warm-white);
      color: var(--dark);
      overflow-x: hidden;
    }

    /* ── NAVBAR ── */
    nav.main-nav {
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 200;
      height: 64px;
      background: rgba(253, 249, 245, 0.92);
      backdrop-filter: blur(16px);
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 5vw;
    }

    .nav-logo {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.6rem;
      font-weight: 600;
      letter-spacing: 0.12em;
      color: var(--dark);
      text-decoration: none;
    }
    .nav-logo span { color: var(--gold); }

    .nav-center { display: flex; align-items: center; }

    .nav-item > a,
    .nav-item > span {
      display: flex;
      align-items: center;
      gap: 0.3rem;
      padding: 0 1.1rem;
      height: 64px;
      font-size: 0.72rem;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: var(--muted);
      text-decoration: none;
      cursor: pointer;
      transition: color 0.2s;
      white-space: nowrap;
      border: none;
      background: none;
      font-family: 'Jost', sans-serif;
    }
    .nav-item > a:hover,
    .nav-item:hover > a,
    .nav-item:hover > span { color: var(--gold); }
    .nav-item > a.active-page { color: var(--dark); }

    .nav-right {
      display: flex;
      align-items: center;
      gap: 1.2rem;
    }
    .nav-right a,
    .nav-right button {
      font-size: 0.72rem;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      color: var(--muted);
      text-decoration: none;
      background: none;
      border: none;
      cursor: pointer;
      font-family: 'Jost', sans-serif;
      transition: color 0.2s;
    }
    .nav-right a:hover,
    .nav-right button:hover { color: var(--dark); }

    /* Mobile nav toggle */
    .nav-hamburger {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
      flex-direction: column;
      gap: 5px;
    }
    .nav-hamburger span {
      display: block;
      width: 22px;
      height: 1.5px;
      background: var(--dark);
      transition: all 0.3s;
    }

    /* ── BREADCRUMB ── */
    .breadcrumb-bar {
      margin-top: 64px;
      padding: 1rem 5vw;
      background: var(--cream);
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.7rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--muted);
      flex-wrap: wrap;
    }
    .breadcrumb-bar a {
      color: var(--muted);
      text-decoration: none;
      transition: color 0.2s;
    }
    .breadcrumb-bar a:hover { color: var(--gold); }
    .breadcrumb-bar .sep { opacity: 0.4; }
    .breadcrumb-bar .current { color: var(--dark); }

    /* ── PRODUCT SECTION ── */
    .product-section {
      padding: 2.5rem 5vw;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3.5rem;
      align-items: start;
      max-width: 1240px;
      margin: 0 auto;
    }

    /* ── IMAGE GALLERY ── */
    /* Large screen: thumbs vertical on left, main image on right */
    .gallery-col {
      display: flex;
      flex-direction: row;
      gap: 0.75rem;
      align-items: flex-start;
    }

    /* Vertical thumbs column */
    .gallery-thumbs {
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
      flex-shrink: 0;
    }

    .gallery-thumbs::-webkit-scrollbar { width: 3px; }
    .gallery-thumbs::-webkit-scrollbar-thumb { background: var(--gold); }

    .thumb-item {
      flex-shrink: 0;
      width: 60px;
      height: 60px;
      background: var(--cream);
      overflow: hidden;
      border: 1px solid transparent;
      cursor: pointer;
      transition: border-color 0.2s;
    }
    .thumb-item.active { border-color: var(--gold); }
    .thumb-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    /* Main image */
    .gallery-main-wrap {
      flex: 1;
      min-width: 0;
    }

    .gallery-main {
      position: relative;
      overflow: hidden;
      background: var(--cream);
      aspect-ratio: 1 / 1;
      cursor: zoom-in;
    }
    .gallery-main img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    }

    /* ── PRODUCT INFO ── */
    .info-col {}

    .info-eyebrow {
      font-size: 0.66rem;
      letter-spacing: 0.28em;
      text-transform: uppercase;
      color: var(--gold);
      margin-bottom: 0.5rem;
    }
    .info-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(1.8rem, 3vw, 2.6rem);
      font-weight: 300;
      line-height: 1.1;
      color: var(--dark);
      margin-bottom: 1.2rem;
    }
    .info-divider {
      height: 1px;
      background: var(--border);
      margin-bottom: 1.2rem;
    }

    /* Price block */
    .price-block {
      display: flex;
      align-items: baseline;
      gap: 0.8rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
    }
    .price-final {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.8rem;
      font-weight: 600;
      color: var(--dark);
    }
    .price-mrp {
      font-size: 0.85rem;
      color: var(--muted);
      text-decoration: line-through;
    }
    .price-badge {
      padding: 0.2rem 0.55rem;
      background: var(--gold);
      color: white;
      font-size: 0.68rem;
      letter-spacing: 0.1em;
      font-weight: 500;
    }

    /* Stock */
    .stock-status {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      font-size: 0.75rem;
      letter-spacing: 0.08em;
      margin-bottom: 1.2rem;
    }
    .stock-dot {
      width: 6px; height: 6px;
      border-radius: 50%;
      background: #4caf50;
    }
    .stock-dot.out { background: #e53935; }
    .stock-label { color: var(--muted); }

    /* Description */
    .info-desc {
      font-size: 0.87rem;
      line-height: 1.8;
      color: var(--muted);
      font-weight: 300;
      margin-bottom: 1.6rem;
    }

    /* Variants */
    .variants-label {
      font-size: 0.66rem;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      color: var(--dark);
      margin-bottom: 0.7rem;
    }
    .variants-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1.6rem;
    }
    .variant-pill {
      padding: 0.45rem 1rem;
      border: 1px solid var(--border);
      font-size: 0.78rem;
      color: var(--muted);
      text-decoration: none;
      transition: border-color 0.2s, color 0.2s, background 0.2s;
    }
    .variant-pill:hover {
      border-color: var(--gold);
      color: var(--dark);
    }
    .variant-pill.active {
      border-color: var(--dark);
      background: var(--dark);
      color: var(--cream);
    }

    /* Stock count */
    .stock-count {
      font-size: 0.73rem;
      color: var(--muted);
      margin-bottom: 1.6rem;
      letter-spacing: 0.05em;
    }
    .stock-count strong { color: var(--dark); }

    /* Action buttons */
    .action-row {
      display: flex;
      gap: 0.7rem;
      flex-wrap: wrap;
      margin-bottom: 1.8rem;
    }
    .btn-cart {
      flex: 1;
      min-width: 140px;
      padding: 0.9rem 1.6rem;
      background: var(--dark);
      color: var(--cream);
      border: none;
      font-family: 'Jost', sans-serif;
      font-size: 0.72rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      cursor: pointer;
      transition: background 0.25s, transform 0.2s;
    }
    .btn-cart:hover {
      background: var(--gold);
      transform: translateY(-1px);
    }
    .btn-cart:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
    }
    .btn-wishlist {
      padding: 0.9rem 1.2rem;
      background: transparent;
      border: 1px solid var(--border);
      color: var(--muted);
      font-family: 'Jost', sans-serif;
      font-size: 0.78rem;
      cursor: pointer;
      transition: border-color 0.2s, color 0.2s;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
    }
    .btn-wishlist:hover {
      border-color: #e03030;
      color: #e03030;
    }
    .btn-wishlist.in-wishlist {
      border-color: #e03030;
      color: #e03030;
    }

    /* ── RELATED PRODUCTS ── */
    .related-section {
      padding: 3.5rem 5vw 5rem;
      background: var(--cream);
    }
    .section-eyebrow {
      font-size: 0.66rem;
      letter-spacing: 0.28em;
      text-transform: uppercase;
      color: var(--gold);
      margin-bottom: 0.5rem;
    }
    .section-title {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(1.4rem, 2.5vw, 2.2rem);
      font-weight: 300;
      color: var(--dark);
      margin-bottom: 2rem;
    }
    .section-title em {
      font-style: italic;
      color: var(--muted);
    }
    .related-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.2rem;
    }
    .related-card {
      background: var(--warm-white);
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.35s cubic-bezier(0.22, 1, 0.36, 1), box-shadow 0.35s;
    }
    .related-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 16px 40px rgba(26, 20, 16, 0.1);
    }
    .related-img {
      position: relative;
      overflow: hidden;
      aspect-ratio: 1/1;
      background: #e8ddd1;
    }
    .related-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: opacity 0.4s;
    }
    .related-img .hover-img {
      position: absolute;
      inset: 0;
      opacity: 0;
      transition: opacity 0.4s;
    }
    .related-card:hover .hover-img { opacity: 1; }
    .related-body {
      padding: 1rem;
      border-top: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .related-name {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1rem;
      color: var(--dark);
      display: block;
      text-decoration: none;
      margin-bottom: 0.15rem;
    }
    .related-name:hover { color: var(--gold); }
    .related-price {
      font-size: 0.8rem;
      color: var(--muted);
    }
    .related-view {
      padding: 0.45rem 0.9rem;
      border: 1px solid var(--border);
      font-size: 0.66rem;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      color: var(--muted);
      text-decoration: none;
      transition: background 0.2s, color 0.2s, border-color 0.2s;
      white-space: nowrap;
    }
    .related-view:hover {
      background: var(--dark);
      color: var(--cream);
      border-color: var(--dark);
    }

    /* ── FOOTER ── */
    footer {
      background: #130e09;
      padding: 3.5rem 5vw 1.8rem;
      border-top: 1px solid rgba(201, 169, 110, 0.1);
    }
    .footer-top {
      display: grid;
      grid-template-columns: 1.8fr 1fr 1fr 1fr;
      gap: 2.5rem;
      padding-bottom: 2.5rem;
      border-bottom: 1px solid rgba(255,255,255,0.06);
      margin-bottom: 1.8rem;
    }
    .footer-brand-logo {
      font-family: 'Cormorant Garamond', serif;
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      color: var(--cream);
      margin-bottom: 0.9rem;
    }
    .footer-brand-logo span { color: var(--gold); }
    .footer-brand-text {
      font-size: 0.8rem;
      line-height: 1.8;
      color: rgba(249, 244, 238, 0.35);
      font-weight: 300;
      max-width: 240px;
      margin-bottom: 1.4rem;
    }
    .social-links { display: flex; gap: 0.7rem; }
    .social-link {
      width: 32px; height: 32px;
      border: 1px solid rgba(201, 169, 110, 0.25);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: border-color 0.2s, background 0.2s;
      text-decoration: none;
    }
    .social-link:hover {
      border-color: var(--gold);
      background: rgba(201, 169, 110, 0.1);
    }
    .social-link svg {
      width: 13px; height: 13px;
      stroke: var(--gold);
      fill: none;
    }
    .footer-col-title {
      font-size: 0.66rem;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      color: var(--gold);
      margin-bottom: 1.2rem;
    }
    .footer-links {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }
    .footer-links a {
      text-decoration: none;
      font-size: 0.8rem;
      color: rgba(249, 244, 238, 0.4);
      font-weight: 300;
      transition: color 0.2s;
    }
    .footer-links a:hover { color: var(--gold); }
    .footer-bottom {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .footer-copy {
      font-size: 0.7rem;
      color: rgba(249, 244, 238, 0.2);
      letter-spacing: 0.05em;
    }
    .footer-legal { display: flex; gap: 1.4rem; }
    .footer-legal a {
      font-size: 0.7rem;
      color: rgba(249, 244, 238, 0.2);
      text-decoration: none;
      transition: color 0.2s;
    }
    .footer-legal a:hover { color: var(--gold); }

    /* ── RESPONSIVE ── */

    /* Tablet: 768px – 1024px */
    @media (max-width: 1024px) {
      .product-section {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 2rem 5vw;
      }

      /* On tablet, keep vertical thumbs but reduce width */
      .thumb-item {
        width: 52px;
        height: 52px;
      }

      .related-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .footer-top {
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
      }
    }

    /* Mobile: up to 767px */
    @media (max-width: 767px) {
      nav.main-nav { padding: 0 4vw; }

      .nav-center { display: none; }

      .nav-hamburger { display: flex; }

      /* Mobile: thumbs horizontal below main image */
      .gallery-col {
        flex-direction: column;
        gap: 0.6rem;
      }

      .gallery-thumbs {
        flex-direction: row;
        overflow-x: auto;
        padding-bottom: 0.2rem;
        max-width: 100%;
      }

      .gallery-thumbs::-webkit-scrollbar { height: 3px; }

      .thumb-item {
        width: 56px;
        height: 56px;
        flex-shrink: 0;
      }

      .related-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.9rem;
      }

      .footer-top {
        grid-template-columns: 1fr;
        gap: 1.8rem;
      }

      .action-row { flex-direction: column; }
      .btn-cart { width: 100%; }
      .btn-wishlist { justify-content: center; }
    }

    /* Very small mobile: up to 480px */
    @media (max-width: 480px) {
      .breadcrumb-bar { padding: 0.8rem 4vw; }

      .product-section { padding: 1.5rem 4vw; }

      .related-section { padding: 2.5rem 4vw 4rem; }

      .related-grid {
        grid-template-columns: 1fr;
      }

      .nav-right { gap: 0.8rem; }
      .nav-right a, .nav-right button { font-size: 0.65rem; }

      .thumb-item { width: 48px; height: 48px; }
    }
  </style>
</head>

<body>

  <!-- ── NAVBAR ── -->
  <nav class="main-nav">
    <a href="/" class="nav-logo">La<span>belle</span></a>

    <div class="nav-center">
      <div class="nav-item"><a href="/">Home</a></div>
      <div class="nav-item"><a href="/shop" class="active-page">Shop</a></div>
      <div class="nav-item"><a href="/cart">Cart</a></div>
    </div>

    <div class="nav-right">
      <a href="/wishlist"><i class="fa fa-heart-o"></i> Wishlist</a>
      <% if (user) { %>
        <a href="/logout">Logout</a>
        <a href="/user-profile">Profile</a>
      <% } else { %>
        <a href="/login">Login</a>
      <% } %>
      <button class="nav-hamburger" id="hamburger" aria-label="Menu">
        <span></span><span></span><span></span>
      </button>
    </div>
  </nav>

  <!-- ── BREADCRUMB ── -->
  <div class="breadcrumb-bar">
    <a href="/">Home</a>
    <span class="sep">›</span>
    <a href="/shop">Shop</a>
    <span class="sep">›</span>
    <span class="current"><%= product.name %></span>
  </div>

  <!-- ── PRODUCT SECTION ── -->
  <div class="product-section">

    <!-- IMAGE GALLERY: thumbs on left (vertical), main image on right -->
    <div class="gallery-col">

      <!-- Thumbnails (vertical on desktop, horizontal on mobile) -->
      <div class="gallery-thumbs" id="galleryThumbs">
        <% product.images.forEach((img, i) => { %>
          <div class="thumb-item <%= i === 0 ? 'active' : '' %>" data-src="<%= img %>">
            <img src="<%= img %>" alt="<%= product.name %> view <%= i+1 %>">
          </div>
        <% }); %>
      </div>

      <!-- Main image -->
      <div class="gallery-main-wrap">
        <div class="gallery-main" id="galleryMain">
          <img id="mainImage" src="<%= product.images[0] %>" alt="<%= product.name %>">
        </div>
      </div>

    </div>

    <!-- PRODUCT INFO -->
    <div class="info-col">
      <p class="info-eyebrow"><%= product.fragranceType || 'Eau de Parfum' %></p>
      <h1 class="info-name"><%= product.name %></h1>
      <div class="info-divider"></div>

      <!-- Price -->
      <div class="price-block">
        <% const bestOffer = Math.max(variant.offer || 0, fragranceOffer || 0);
           const finalPrice = bestOffer > 0
             ? Math.round(variant.price - (variant.price * bestOffer / 100))
             : variant.price; %>
        <span class="price-final">₹<%= finalPrice %></span>
        <% if (bestOffer > 0) { %>
          <span class="price-mrp">₹<%= variant.price %></span>
          <span class="price-badge"><%= bestOffer %>% OFF</span>
        <% } %>
      </div>

      <!-- Stock Status -->
      <div class="stock-status">
        <% if (variant.stock > 0) { %>
          <span class="stock-dot"></span>
          <span class="stock-label">In Stock</span>
        <% } else { %>
          <span class="stock-dot out"></span>
          <span class="stock-label">Out of Stock</span>
        <% } %>
      </div>

      <!-- Description -->
      <p class="info-desc"><%= product.description %></p>

      <!-- Variants -->
      <p class="variants-label">Size</p>
      <div class="variants-row">
        <% variants.forEach((v) => { %>
          <a href="/product-details/<%= v._id %>"
            class="variant-pill <%= v._id.toString() === selectedVariant.toString() ? 'active' : '' %>">
            <%= v.milliliter %> ml
          </a>
        <% }); %>
      </div>

      <p class="stock-count">Available: <strong><%= variant.stock %> units</strong></p>

      <!-- Add to Cart + Wishlist -->
      <input type="hidden" id="variant-id-input" value="<%= variant._id %>">

      <div class="action-row">
        <% if (variant.stock > 0) { %>
          <button class="btn-cart" id="add-to-cart">
            <i class="fa fa-shopping-bag" style="margin-right:0.5rem;"></i> Add to Cart
          </button>
        <% } else { %>
          <button class="btn-cart" disabled>Out of Stock</button>
        <% } %>

        <a href="/wishlist/<%= variant._id %>"
          onclick="toggleWishlist(event, '<%= variant._id %>')"
          class="btn-wishlist <%= wishlistItems && wishlistItems.includes(variant._id.toString()) ? 'in-wishlist' : '' %>"
          id="wishlist-btn-wrapper">
          <% if (wishlistItems && wishlistItems.includes(variant._id.toString())) { %>
            <i id="wishlist-button-<%= variant._id %>" class="fa fa-heart"></i>
            <span id="wishlist-label-<%= variant._id %>">Remove from Wishlist</span>
          <% } else { %>
            <i id="wishlist-button-<%= variant._id %>" class="fa fa-heart-o"></i>
            <span id="wishlist-label-<%= variant._id %>">Add to Wishlist</span>
          <% } %>
        </a>
      </div>
    </div>

  </div>

  <!-- ── RELATED PRODUCTS ── -->
  <% if (relatedProducts && relatedProducts.length > 0) { %>
    <div class="related-section">
      <p class="section-eyebrow">You May Also Like</p>
      <h2 class="section-title">Related <em>Fragrances</em></h2>
      <div class="related-grid">
        <% relatedProducts.forEach((rp) => { %>
